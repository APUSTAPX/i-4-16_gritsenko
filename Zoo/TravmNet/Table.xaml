<Window x:Class="Zoo.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Зоопарк!" Height="212" Width="239"
        Closed="Window_Closed" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="CBType" HorizontalAlignment="Left" Margin="95,14,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CBType_SelectionChanged"/>
        <Label Content="Тип билета:" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LBInfo" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Sylfaen"/>
        <Button Content="Купить" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="205" Height="31" Click="Button_Click"/>
    </Grid>
</Window>
